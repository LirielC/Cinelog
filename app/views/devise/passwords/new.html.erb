<!-- Container de Recuperação de Senha com Design Moderno -->
<div class="w3-container" style="margin-top: 80px; margin-bottom: 100px; display: flex; justify-content: center; align-items: center; min-height: 70vh;">
  <div class="login-container">
    
    <!-- Título -->
    <div class="login-heading">
      <i class="fa fa-key" style="font-size: 2.5rem; margin-bottom: 10px; color: rgb(16, 137, 211);"></i>
      <div style="font-size: 24px;">Esqueceu a senha?</div>
      <p style="font-size: 13px; color: rgb(120, 120, 120); font-weight: 400; margin-top: 10px; text-align: center;">
        Digite seu e-mail para receber instruções de recuperação
      </p>
    </div>

    <!-- Formulário de Recuperação -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'login-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo Email -->
      <%= f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          required: true,
          class: 'login-input',
          placeholder: 'E-mail' %>

      <!-- Botão de Submit -->
      <%= f.submit "Enviar Instruções", class: 'login-button' %>
      
    <% end %>

    <!-- Links Adicionais -->
    <div class="login-agreement">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
